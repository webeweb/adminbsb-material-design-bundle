    <div class="row clearfix">
        <div class="{{ bootstrapGrid({"lg": 12, "md": 12, "sm": 12, "xs": 12}) }}">
            <div class="card">
                <div class="header bg-{{ getContainerParameter("wbw_adminbsb.skin") }}">
                    {{ adminBSBCardHeader({"icon": "person", "content": "profile.edit.submit"|trans([], "FOSUserBundle")}) }}
                </div>
                <div class="body">
                    {% include "@WBWAdminBSB/bundles/FOSUserBundle/Profile/edit/_content.html.twig" %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
