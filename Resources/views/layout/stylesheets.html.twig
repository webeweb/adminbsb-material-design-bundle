{# Resources/views/layout/stylesheets.html.twig #}
{% set _webPath    = "bundles/wbwadminbsb" %}
{% set _plugins    = getContainerParameter("wbw.adminbsb.asset.adminbsb").plugins %}
{% set _appPlugins = getContainerParameter("wbw_adminbsb.plugins") %}
{% for _appPlugin in _appPlugins %}
    {% set _replaces = {
        "{{ version }}": _plugins[_appPlugin].version,
    } %}
    {% for _javascript in _plugins[_appPlugin].stylesheets %}
        {% if ("prod" != app.environment and true == loop.first) %}
            <!-- {{ _plugins[_appPlugin].description }} -->
        {% endif %}
        {% set _path = (_webPath ~ _javascript)|replace(_replaces) %}
        <link type="text/css" rel="stylesheet" href="{{ asset(_path) }}">
    {% endfor %}
{% endfor %}
<link type="text/css" rel="stylesheet" href="{{ asset(_webPath ~ "/css/style.min.css") }}">
<link type="text/css" rel="stylesheet" href="{{ asset(_webPath ~ "/css/themes/all-themes.min.css") }}">
<style>
    /* === Buttons ========================================================= */
    .btn:not(.btn-link):not(.btn-circle) i.fa {
        font-size: inherit !important;
        position: relative;
        top: inherit !important;
    }

    .btn span.glyphicon {
        margin: -4px 0 !important;
        position: relative;
        top: -1px !important;
        vertical-align: sub;
    }

    /* === DataTables ====================================================== */
    table.dataTable {
        width: 100% !important;
    }

    /* === Forms =========================================================== */
    div.error ul {
        list-style: none;
    }

    div.error ul li {
        color: #F44336;
    }

    .form-line.focused .form-label {
        font-weight: bold;
        color: #555;
    }

    /* to have same appearance as .form-group.form-float label */
    .form-line .form-label {
        position: absolute;
        top: -10px;
        left: 0;
        cursor: text;
        font-size: 12px;
        font-weight: bold;
        color: #555;
    }

    /* === Sidebar menu ==================================================== */
    .sidebar .menu .list .ml-menu li.active a.toggled:not(.menu-toggle) {
        margin-left: 0 !important;
    }

    .sidebar .menu .list .ml-menu li.active a.toggled:not(.menu-toggle)::before {
        content: none !important;
    }

    .sidebar .menu .list li i.fa {
        width: 24px !important;
        height: 24px !important;
        font-size: 20px !important;
        margin: 2px;
        text-align: center;
    }

    /* === DataTables ====================================================== */
    table.dataTable {
        width: 100% !important;
    }

    /* === Forms =========================================================== */
    div.error ul {
        list-style: none;
    }

    div.error ul li {
        color: #F44336;
    }
</style>
